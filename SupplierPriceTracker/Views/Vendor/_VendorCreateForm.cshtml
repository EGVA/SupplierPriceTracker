@model SupplierPriceTracker.Models.Vendor

<h5>Novo Vendedor</h5>
@using (Html.BeginForm("Create", "Vendor", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(model => model.Name)
		<div>
			@Html.TextBoxFor(model => model.Name, new { @class = "form-control mb-2" })
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>
	</div>
	<div class="form-group">
		<input type="submit" value="Criar Vendedor" class="btn btn-primary mt-2 mb-2" />
	</div>
}